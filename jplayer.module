/**
 * Implements hook_library().
 */
function jplayer_library() {
  $file = _jplayer_get_js();
  $version = jplayer_get_version($file);

  $libraries = array();
  $libraries['jplayer'] = array(
    'title' => 'jPlayer',
    'website' => 'http://www.jplayer.org',
    'version' => $version,
    'js' => array(
      $file => array(),
    ),
  );
  return $libraries;
}

